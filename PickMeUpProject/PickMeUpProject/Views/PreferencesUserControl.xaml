<UserControl
    x:Class="PickMeUpProject.Views.PreferencesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PickMeUpProject.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="250" Height="80">
    <Border  Margin="50 0 0 0" Background="Blue" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                
            </Grid.ColumnDefinitions>
            <ToggleSwitch VerticalAlignment="Center"  HorizontalAlignment="Center"  Foreground="White"  x:Name="Remember" Header="Remember Where I Was" Toggled="OnToggled"  Grid.Column="1"  />
        </Grid>
    </Border>

</UserControl>
